<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profile_picture"
        android:src="@drawable/icon_1_n"
        android:layout_alignTop="@+id/label_fullname"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full Name"
        android:id="@+id/label_fullname"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/profile_picture"
        android:layout_toEndOf="@+id/profile_picture"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:id="@+id/label_username"
        android:layout_below="@+id/label_fullname"
        android:layout_alignLeft="@+id/label_fullname"
        android:layout_alignStart="@+id/label_fullname" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User ID:"
        android:id="@+id/label_userid"
        android:layout_below="@+id/label_username"
        android:layout_alignLeft="@+id/label_username"
        android:layout_alignStart="@+id/label_username" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full Name"
        android:id="@+id/textView_fullname"
        android:layout_alignTop="@+id/label_fullname"
        android:layout_toRightOf="@+id/label_fullname"
        android:layout_toEndOf="@+id/label_fullname"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Name"
        android:id="@+id/textView_username"
        android:layout_below="@+id/textView_fullname"
        android:layout_alignLeft="@+id/textView_fullname"
        android:layout_alignStart="@+id/textView_fullname" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User ID"
        android:id="@+id/textView_userid"
        android:layout_alignTop="@+id/label_userid"
        android:layout_alignLeft="@+id/textView_username"
        android:layout_alignStart="@+id/textView_username" />

</RelativeLayout>